<%- include header.ejs %>
<!-- /.navbar -->

 <!-- Main Sidebar Container -->
 <%- include sidebar.ejs %>
 
  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Payments</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="#">Home</a></li>
              <li class="breadcrumb-item active">User Profile</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="row">
          <div class="col-12">
          
            <!-- /.card -->
  
            <div class="card">
              
              
              <div class="clearfix" style="margin-bottom: 10px;">

                <form action="" method="post">                        
                 
                     <div class="col-md-12 col-lg-12 d-flex filter-box">
                   <div class="col-md-3 col-lg-3">
                    
                       <div class=" d-flex align-items-center"> 
                         <label> Email : </label>
                          <input type="text" class="form-control" name="search_email" placeholder="Search By Email"> </div>
                      </div>
                      
                     
                       
                    <div class="col-md-2 col-lg-2">
                      <div class="pull-left">
                        <input type="submit" class="btn btn-info" name="search_data" value="Submit" >
                    </div>
                    </div>
                   </div> 
                                      
               </form>

                   </div> 
              <!-- /.card-header -->
              <div class="card-body ">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                    <tr>
                        <th>S no</th>
                      <th>Payment ID</th>
                      <th>Email</th>
                      <th>Amount</th>
                      <th>Course Name</th>
                      <th>Payment Date</th>
                    </tr>
                    </thead>
                    <tbody>
                   
                      <% if (typeof Alldata[0]=='object') { %>
                        
                        <% var i=1; %>
                        <% if ( typeof(Alldata) !='undefined') { %>
                        <% Alldata.forEach(function(User) { %>
                          <tr>
                            <td><%=i %></td>
                            <td> <%= User.paymentId %>
                            </td>
                            <td><%= User.email %></td>
                            <td><%= User.amount %></td>
                            <td><%= User.course_name %></td>
                            <% var myDate = new Date(User.paymentdate); %>  
                            <% var registerdate=myDate.getDate(); %> 
                            <% var registermonth=myDate.getMonth()+1; %> 
                            <% var registeryear=myDate.getFullYear(); %>
                            <% var createDate= registerdate + "/" + registermonth + "/" + registeryear; %>   
                            <td><%= createDate %></td>
                            
                        
                         
                          </tr>
                         

                          <% i++; }); }%>
                          <% }else{ %>
                              
                            <td><h3>No Record Found! </h3></td>
                        <%  }%>
                    
                     

                   
                
                    </tbody>
                   
                  </table>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <%- include footer.ejs %>